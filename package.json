{
  "name": "trainers.gg",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@trainers/web",
    "dev:mobile": "turbo run dev --filter=@trainers/mobile",
    "dev:backend": "turbo run dev --filter=@trainers/backend",
    "dev:web+backend": "turbo run dev --filter=@trainers/web --filter=@trainers/backend",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@trainers/web",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}
