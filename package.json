{
  "name": "@thatguyinabeanie/trainers.gg",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "setup": "pnpm --filter=@trainers/supabase run setup",
    "setup:pds": "./infra/pds/setup-local.sh",
    "dev": "pnpm run setup && pnpm run setup:pds && turbo run dev",
    "dev:web": "turbo run dev --filter=@trainers/web",
    "dev:mobile": "turbo run dev:mobile --filter=@trainers/mobile",
    "dev:backend": "turbo run dev --filter=@trainers/supabase",
    "dev:web+backend": "turbo run dev --filter=@trainers/web --filter=@trainers/supabase",
    "pds:start": "./infra/pds/local-dev.sh start",
    "pds:stop": "./infra/pds/local-dev.sh stop",
    "pds:status": "./infra/pds/local-dev.sh status",
    "pds:logs": "./infra/pds/local-dev.sh logs",
    "functions:serve": "pnpm --filter=@trainers/supabase run functions:serve",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@trainers/web",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "db:start": "pnpm --filter=@trainers/supabase run start",
    "db:stop": "pnpm --filter=@trainers/supabase run stop",
    "db:restart": "pnpm --filter=@trainers/supabase run restart",
    "db:status": "pnpm --filter=@trainers/supabase run status",
    "db:reset": "pnpm --filter=@trainers/supabase run db:reset",
    "db:migrate": "pnpm --filter=@trainers/supabase run db:migrate",
    "db:diff": "pnpm --filter=@trainers/supabase run db:diff",
    "db:lint": "pnpm --filter=@trainers/supabase run db:lint",
    "db:seed": "pnpm --filter=@trainers/supabase run db:seed",
    "db:dump": "pnpm --filter=@trainers/supabase run db:dump",
    "generate-types": "pnpm --filter=@trainers/supabase run generate-types",
    "generate-seed-json": "pnpm --filter=@trainers/supabase run generate-seed-json",
    "generate-seeds": "pnpm --filter=@trainers/supabase run generate-seeds",
    "supabase": "pnpm --filter=@trainers/supabase run supabase",
    "prepare": "husky"
  },
  "devDependencies": {
    "@atproto/jwk-jose": "^0.1.11",
    "@trainers/prettier-config": "workspace:*",
    "husky": "^9.1.7",
    "jose": "^5.10.0",
    "lint-staged": "^16.2.7",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "supabase": "^2.72.8",
    "turbo": "^2.7.6",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "lodash@<4.17.21": ">=4.17.21",
      "tar@<=7.5.3": ">=7.5.4"
    }
  }
}
