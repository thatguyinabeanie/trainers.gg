{
  "name": "@thatguyinabeanie/trainers.gg",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "// setup": "",
    "setup": "pnpm --filter=@trainers/supabase run setup",
    "setup:pds": "./infra/pds/setup-local.sh",
    "postinstall": "./scripts/postinstall.sh",
    "prepare": "husky",
    "// dev": "",
    "dev": "rm -rf apps/web/.next/dev && turbo run dev",
    "dev:web": "turbo run dev --filter=@trainers/web",
    "dev:mobile": "turbo run dev --filter=@trainers/mobile",
    "dev:backend": "turbo run dev --filter=@trainers/supabase",
    "dev:web+backend": "turbo run dev --filter=@trainers/web --filter=@trainers/supabase",
    "// build": "",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@trainers/web",
    "build:mobile": "pnpm --filter=@trainers/mobile run build:dev",
    "build:mobile:device": "pnpm --filter=@trainers/mobile run build:dev-device",
    "build:mobile:preview": "pnpm --filter=@trainers/mobile run build:preview",
    "// prebuild": "",
    "prebuild": "turbo run prebuild --filter=@trainers/mobile",
    "prebuild:clean": "turbo run prebuild:clean --filter=@trainers/mobile",
    "prebuild:ios": "turbo run prebuild:ios --filter=@trainers/mobile",
    "prebuild:android": "turbo run prebuild:android --filter=@trainers/mobile",
    "// quality": "",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "// db": "",
    "db:start": "turbo run db:start --filter=@trainers/supabase",
    "db:stop": "turbo run db:stop --filter=@trainers/supabase",
    "db:restart": "turbo run db:restart --filter=@trainers/supabase",
    "db:status": "turbo run db:status --filter=@trainers/supabase",
    "db:reset": "turbo run db:reset --filter=@trainers/supabase",
    "db:migrate": "turbo run db:migrate --filter=@trainers/supabase",
    "db:diff": "turbo run db:diff --filter=@trainers/supabase",
    "db:lint": "turbo run db:lint --filter=@trainers/supabase",
    "db:seed": "turbo run db:seed --filter=@trainers/supabase",
    "db:dump": "turbo run db:dump --filter=@trainers/supabase",
    "// supabase": "",
    "functions:serve": "turbo run functions:serve --filter=@trainers/supabase",
    "generate-types": "turbo run generate-types --filter=@trainers/supabase",
    "generate-seed-json": "pnpm --filter=@trainers/supabase run generate-seed-json",
    "generate-seeds": "pnpm --filter=@trainers/supabase run generate-seeds",
    "supabase": "pnpm --filter=@trainers/supabase run supabase",
    "// pds": "",
    "setup:ngrok": "./infra/pds/local-dev.sh tunnel",
    "pds:start": "./infra/pds/local-dev.sh start",
    "pds:stop": "./infra/pds/local-dev.sh stop",
    "pds:status": "./infra/pds/local-dev.sh status",
    "pds:logs": "./infra/pds/local-dev.sh logs",
    "// test": "",
    "test": "turbo run test",
    "test:ci": "turbo run test --ui stream",
    "test:e2e": "turbo run test:e2e --filter=@trainers/web --ui stream",
    "test:unit": "turbo run test",
    "test:watch": "turbo run test:watch",
    "// cleanup": "",
    "clean": "turbo run clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@atproto/jwk-jose": "^0.1.11",
    "@trainers/prettier-config": "workspace:*",
    "@types/jest": "^29.5.14",
    "eslint": "catalog:",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jose": "^5.10.0",
    "lint-staged": "^16.2.7",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "supabase": "^2.75.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "turbo": "^2.8.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "lodash@<4.17.21": ">=4.17.21",
      "tar@<=7.5.3": ">=7.5.4",
      "@types/react": "~19.1.10"
    },
    "ignoredBuiltDependencies": [
      "@sentry/cli"
    ]
  }
}
