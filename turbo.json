{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "FORCE_REDIRECT_TO_HOME",
    "JWT_PRIVATE_KEY",
    "JWKS",
    "CONVEX_DEPLOY_KEY",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SECRET",
    "ENABLE_SEEDING"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".expo/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
