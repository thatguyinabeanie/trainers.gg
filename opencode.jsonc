{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-opus-4.5",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest",
        "--browser",
        "chrome"
      ],
      "enabled": true,
    },
    "vercel": {
      "type": "remote",
      "url": "https://mcp.vercel.com/trainers-gg/trainers-gg",
      "enabled": true,
    },
    "supabase": {
      "type": "remote",
      "url": "http://127.0.0.1:54321/mcp",
      "oauth": false,
      "enabled": true,
    },
    "supabase-cloud": {
      "type": "remote",
      "url": "https://mcp.supabase.com/mcp?project_ref=shsijtmbiibknwygcdtc&read_only=true",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:SUPABASE_ACCESS_TOKEN}",
      },
      "enabled": true,
    },
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "enabled": true,
    },
  },
}
